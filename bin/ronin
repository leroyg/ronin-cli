#!/usr/bin/env ruby

require 'getopt/long'

$LOAD_PATH.unshift(File.expand_path(File.join(File.dirname(__FILE__),'..','lib')))
require 'ronin'

include Ronin

opt = Getopt::Long.getopts(
  ['--config','-C',Getopt::REQUIRED],
  ['--install-repo','-I',Getopt::REQUIRED],
  ['--add-repo','-A',Getopt::REQUIRED],
  ['--repo-path','-P',Getopt::REQUIRED],
  ['--list-repo','-L',Getopt::REQUIRED],
  ['--remove-repo','-R',Getopt::REQUIRED],
  ['--update-repo','-U',Getopt::REQUIRED],
  ['--list-repos','-l'],
  ['--update-repos','-u'],
  ['--category','-c',Getopt::REQUIRED],
  ['--action','-a',Getopt::REQUIRED],
  ['--list-actions',''],
  ['--verbose','-v'],
  ['--version','-V'],
  ['--help','-h',Getopt::OPTIONAL]
)

if opt['version']
  puts "ronin v#{RONIN_VERSION}"
  exit
end

if opt['config']
  Repo::open_config(opt['config'])
end

if opt['install-repo']
  Repo::RepositoryMetadata.new(opt['install-repo']) do |metadata| 
    if opt['repo-path']
      Repo::config.install(metadata,opt['repo-path'])
    else
      Repo::config.install(metadata)
    end
  end

  exit
elsif opt['add-repo']
  Repo::config.link(opt['add-repo'])
  exit
elsif opt['list-repo']
  repo = Repo::config.get_repository(opt['list-repo'])

  puts "[ #{repo} ]"
  puts "\tname: #{repo.name}"
  puts "\tpath: #{repo.path}"
  puts "\ttype: #{repo.type}"

  if opt['verbose']
    repo.author.each_value do |author|
      puts "\n\tauthor: #{author.name}\n"

      author.contacts.each do |key,value|
        puts "\t\t#{key}: #{value}"
      end

      if author.biography
        puts "\t\tbiography:\n\n\t\t\t#{author.biography}"
      end

      putc "\n"
    end

    if repo.description
      puts "\tdescription:\n\n\t\t#{repo.description}"
    end
  end

  unless repo.deps.empty?
    puts "\n\tdependencies:\n\n"

    repo.deps.each_key do |dep|
      print "\t\t#{dep}"

      unless Repo::config.has_repository?(dep)
        print " (missing)"
      end
      putc "\n"
    end

    putc "\n"
  end

  if (opt['verbose'] && !(repo.categories.empty?))
    puts "\tcategories:\n\n"
    repo.categories.each { |category| puts "\t\t#{category}" }
  end
  exit
elsif opt['update-repo']
  Repo::config.get_repository(opt['update-repo']).update
  exit
elsif opt['list-repos']
  Repo::config.repositories.each { |repo| puts "#{repo}" }
  exit
elsif opt['update-repos']
  Repo::config.update
  exit
end

if opt['category']
  category = Repo::config.get_category(opt['category'])

  if opt['list-actions']
    category.actions.each_value { |action| puts "#{action}" }
  else
    category.setup

    if opt['action']
      if (opt['action']!='setup' && opt['action']!='teardown')
        category.perform_action(opt['action'])
      end
    else
      category.main
    end

    category.teardown
    exit
  end
end
